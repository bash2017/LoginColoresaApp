<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="musica"
        android:title="Reproducir música"
        android:summary="Indicar si repdroducir música de fondo"/>
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/lstTiposGraficos"
        android:entryValues="@array/lstTiposGraficosValores"
        android:key="list_preference_1"
        android:title="Tipos de graficos"
        android:summary="Seleccionar la forma de visualización"/>
    <EditTextPreference
        android:defaultValue="5"
        android:key="fragmentos"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Numero de fragmentos"
        android:summary="Trozos en los que se dividira un elementoP"/>
    <PreferenceCategory android:title="Preferencias de red">

    </PreferenceCategory>
    <SwitchPreference
        android:defaultValue="true"
        android:key="wifi"
        android:title="Habilitar WI-FI" />
    <RingtonePreference
        android:defaultValue=""
        android:key="tono"
        android:title="Tono al recibir un mensaje" />


</PreferenceScreen>